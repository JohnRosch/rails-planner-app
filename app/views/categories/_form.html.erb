<div class ="text-white form-input form-group d-flex flex-column align-items-center justify-content-center">
  <h1>Make Category</h1> <br>
  <%= simple_form_for(@category) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
    <div class="form-inputs form-group d-flex flex-column align-items-center justify-content-center">
      <%= f.input :name, class:"form-control"%>
    </div>
    <div class="form-actions d-flex justify-content-center">
      <%= f.submit class: "btn btn-success btn-sm" %>
    </div>
  <% end %>
</div>