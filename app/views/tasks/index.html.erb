<div class ="d-flex flex-column mb-3 align-items-center justify-content-center">
  <h1 class="text-white">My tasks <%= link_to "New Task",new_task_path, class:"btn btn-success btn-sm" %> </h1>
  <hr>
  <hr>
      

  
  <div class="container-xl ">
    <div class="row">
      <% @tasks.each do |task| %>
        <% if task.user == current_user %>
        <div class="col-md-4">
          <div class="card text-center mt-3" style="width: 18rem;">
            <div class="card-body">
              <h5 class="card-title"><%= task.name %></h5>
              <p class="card-text">
                <%= link_to 'Show', task, class: "btn btn-secondary btn-sm" %>
                <%= link_to 'Edit', edit_task_path(task), class: "btn btn-secondary btn-sm" %>
                <%= button_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm"%>
              </p>
            </div>
          </div>
        </div>
              <% end %>
              <% end %>             
    </div>
  </div>
