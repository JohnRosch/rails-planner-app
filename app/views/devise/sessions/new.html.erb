<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="d-flex flex-column align-items-center">
  <div class="card text-center" style="width: 22rem;">
   <div class="card-body">
    <h2 class="card-title">Please Sign in</h2>
    <div class="form-inputs form-group d-flex flex-column align-items-center">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email", class:"form-control",}%>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password", class:"form-control"} %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Log in", class:"btn btn-dark btn-sm mb-3" %>
    </div>
    <% end %>
    <%= render "devise/shared/links" %>
   </div>
  </div>
</div>